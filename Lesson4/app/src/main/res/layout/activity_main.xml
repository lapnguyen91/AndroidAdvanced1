<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lapnguyen.lesson4.MainActivity"
    android:background="#000000"
    android:padding="5dp">

    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="0dp"
        android:gravity="right"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:inputType="numberDecimal"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#262526"
            android:layout_margin="1dp"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Delete"
            android:layout_margin="1dp"
            android:textColor="@android:color/white"
            android:background="#262526"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnNumber7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnNumber8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnNumber9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@android:color/white"
            android:background="#262526"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnNumber4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnNumber5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnNumber6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnMulti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x"
            android:textColor="@android:color/white"
            android:background="#262526"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnNumber1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnNumber2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnNumber3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@android:color/white"
            android:background="#262526"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnDecimalPoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnNumber0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textColor="@android:color/white"
            android:background="#444744"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@android:color/white"
            android:background="#262526"
            android:textSize="20dp"
            android:layout_margin="1dp"/>
    </LinearLayout>

</LinearLayout>